<Page x:Class="Eggs_and_Ham.Reserveringen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Eggs_and_Ham"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="600"
      Title="Reserveringen">

    <Grid Name="ReserveringMain">

        <Label Content="Reserveringen:" HorizontalAlignment="Left" Margin="20,37,0,0" VerticalAlignment="Top" Width="112" Height="26"/>
        <ListBox Name="ResList" HorizontalAlignment="Left" Height="400" Margin="20,68,0,0" VerticalAlignment="Top" Width="183" Grid.ColumnSpan="2" SelectionChanged="SelectReserve"/>

        <StackPanel Height="40" VerticalAlignment="Bottom" Width="600" Orientation="Horizontal">
            <Button Name="Terug" Content="Terug" VerticalAlignment="Stretch" Width="75" Click="Terug_Click"/>
            <TextBox Name="InvoerReservering" Height="36" TextWrapping="Wrap" Margin="180,0,0,0" Width="168"/>
            <Button x:Name="Remove" Content="Verwijder" VerticalAlignment="Stretch" Margin="10,0,0,0" Width="72" Click="Remove_Click"/>
            <Button x:Name="Add" Content="toevoegen" VerticalAlignment="Stretch" Margin="10,0,0,0" Width="72" Click="Add_Click"/>
        </StackPanel>
        <Label Name="plaatsen" Content="Beschikbare plaatsen: " HorizontalAlignment="Left" Margin="208,68,0,0" VerticalAlignment="Top" Height="32" Width="184"/>

        <Grid HorizontalAlignment="Left" Height="259" Margin="223,100,0,0" VerticalAlignment="Top" Width="314">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="75"/>
                <ColumnDefinition Width="75"/>
                <ColumnDefinition Width="75"/>
                <ColumnDefinition Width="75"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <Button Name="Tafel1"  Content="Tafel 1" Grid.Row="0" Grid.Column="0"  HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" Width="75" Height="49" Click="SelectTable"/>
            <Button Name="Tafel2"  Content="Tafel 2" Grid.Row="0" Grid.Column="1"  HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" Width="75" Height="49" Click="SelectTable"/>
            <Button Name="Tafel3"  Content="Tafel 3" Grid.Row="0" Grid.Column="2"  HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" Width="75" Height="49" Click="SelectTable"/>
            <Button Name="Tafel4"  Content="Tafel 4" Grid.Row="0" Grid.Column="3"  HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" Width="75" Height="49" Click="SelectTable"/>
            <Button Name="Tafel5"  Content="Tafel 5" Grid.Row="1" Grid.Column="0"  HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" Width="75" Height="49" Click="SelectTable"/>
            <Button Name="Tafel6"  Content="Tafel 6" Grid.Row="1" Grid.Column="1"  HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" Width="75" Height="49" Click="SelectTable"/>
            <Button Name="Tafel7"  Content="Tafel 7" Grid.Row="1" Grid.Column="2"  HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" Width="75" Height="49" Click="SelectTable"/>
            <Button Name="Tafel8"  Content="Tafel 8" Grid.Row="1" Grid.Column="3"  HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" Width="75" Height="49" Click="SelectTable"/>
            <Button Name="Tafel9"  Content="Tafel 9" Grid.Row="2" Grid.Column="0"  HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" Width="75" Height="49" Click="SelectTable"/>
            <Button Name="Tafel10" Content="Tafel 10" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" Width="75" Height="49" Click="SelectTable"/>
            <Button Name="Tafel11" Content="Tafel 11" Grid.Row="2" Grid.Column="2" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" Width="75" Height="49" Click="SelectTable"/>
            <Button Name="Tafel12" Content="Tafel 12" Grid.Row="2" Grid.Column="3" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" Width="75" Height="49" Click="SelectTable"/>
            <Button Name="Tafel13" Content="Tafel 13" Grid.Row="3" Grid.Column="0" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" Width="75" Height="49" Click="SelectTable"/>
