<Page x:Class="Eggs_and_Ham.Reserveringen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Eggs_and_Ham"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="600"
      Title="Reserveringen">

    <Grid Name="ReserveringMain">
        
        <Label Content="Reserveringen:" HorizontalAlignment="Left" Margin="20,37,0,0" VerticalAlignment="Top" Width="112" Height="26"/>
        <ListBox Name="ResList" HorizontalAlignment="Left" Height="400" Margin="20,68,0,0" VerticalAlignment="Top" Width="183" Grid.ColumnSpan="2"/>
        
        <StackPanel Height="40" VerticalAlignment="Bottom" Width="600" Orientation="Horizontal">
            <Button Name="Terug" Content="Terug" VerticalAlignment="Stretch" Width="75" Click="Terug_Click"/>
            <TextBox Name="InvoerReservering" Height="36" TextWrapping="Wrap" Margin="265,0,0,0" Width="168"/>
            <Button x:Name="Add" Content="toevoegen" VerticalAlignment="Stretch" Margin="10,0,0,0" Width="72" Click="Add_Click"/>
        </StackPanel>

    </Grid>
</Page>
